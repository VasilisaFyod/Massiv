<Window x:Class="Massiv.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Massiv.Views"
        xmlns:vm="clr-namespace:Massiv.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="800" MinWidth="1400" Height="800" Width="1300"  WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="105"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{StaticResource Grey}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="105"/>
                </Grid.ColumnDefinitions>

                <ListBox x:Name="NavMenu" 
                         Background="Transparent"
                         ItemsSource="{Binding MenuItems}"
                         SelectedItem="{Binding CurrentMenuItem}"
                         BorderThickness="0"
                         Padding="20,0,0,0"
                         ItemContainerStyle="{StaticResource NavMenuItemStyle}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>

                <Grid Grid.Column="1">
                    <Button Margin="5"
                            Width="100" 
                            Height="100" 
                            Style="{StaticResource RoundButtonStyleTransparent}"
                            Command="{Binding AccountCommand}">
                        <Image Width="80" Source="pack://application:,,,/Images/account.png"/>
                    </Button>
                </Grid>
            </Grid>

            <Frame Grid.Row="1"
                   Content="{Binding CurrentPage}" 
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>