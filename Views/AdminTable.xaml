<Page x:Class="Massiv.Views.AdminTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Massiv.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1300"
      Title="AdminTable">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <DataGrid Width="600" Margin="0,0"
                  Grid.Row="0" 
                  SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                  x:Name="DGridUser" 
                  ItemsSource="{Binding Users}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"  
                  Style="{StaticResource CustomDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource DefaultColumnHeaderStyle}"
                  RowStyle="{StaticResource CustomRowStyle}"
                  CellStyle="{StaticResource CustomCellStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" 
                    Binding="{Binding Login}" 
                    Width="*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" Width="*"/>
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Menu Margin="10,0,10,0" Style="{StaticResource CustomMenuStyle}" Width="50">
                                <MenuItem Style="{StaticResource MainMenuItemStyle}">
                                    <MenuItem.Header>
                                        <Image Width = "25" Source = "pack://application:,,,/Images/actions.png" />
                                    </MenuItem.Header>
                                    <MenuItem Header="Редактировать" Style="{StaticResource SubMenuItemStyle}" Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                    <MenuItem Header="Удалить" Style="{StaticResource SubMenuItemStyle}" 
                                                                                   Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                                </MenuItem>
                            </Menu>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Background="{StaticResource Purple}" 
                    Content="Добавить"  
                    Grid.Column="1"
                    Foreground="White"
                            Width="202" 
                            Height="50"
                            Style="{StaticResource Button}"
                     Command="{Binding AddUserCommand}"
                     />
        </Grid>
    </Grid>
</Page>

