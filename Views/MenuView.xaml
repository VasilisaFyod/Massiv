<Window x:Class="Massiv.Views.MenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Massiv.Views"
        mc:Ignorable="d"
        Height="630" Width="530"
        Title="Menu" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="20" Background="{StaticResource DarkPurple}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Margin="15,15" Width="40" Height="40" 
                Style="{StaticResource RoundButtonStyleTransparent}" 
                VerticalAlignment="Top" HorizontalAlignment="Right"  
                Cursor="Hand"
                Command="{Binding CloseCommand}">
                <Image Width="40" Source="pack://application:,,,/Images/close.png"/>
            </Button>

            <TextBlock Grid.Row="0" Text="Меню" 
                   Foreground="White" Style="{StaticResource Title}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="0,20"/>
            <Grid Grid.Row="1" Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" 
                           Style="{StaticResource RoundButtonStyleTransparent}" 
                           Foreground="White" 
                           Content="Общая таблица"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                            FontSize="18"
                          />
                <Rectangle Grid.Row="1" Height="1" Margin="80,0" Fill="White" VerticalAlignment="Center"/>
            </Grid>
            <TextBlock
                Grid.Row="2" Text="Мои таблицы" 
                   Foreground="White"  
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="18"
                />
            <Button Grid.Row="3" 
                Style="{StaticResource RoundButtonStyleTransparent}" 
                Content="&#9726; Беларусь" 
                Foreground="White"
                FontSize="18"/>
            <Button Grid.Row="4" 
    Style="{StaticResource RoundButtonStyleTransparent}" 
    Content="&#9726; Внутренние" 
    Foreground="White"
    FontSize="18"/>
            <Button Grid.Row="5" 
    Style="{StaticResource RoundButtonStyleTransparent}" 
    Content="&#9726; Москва (перекупщики)" 
    Foreground="White"
    FontSize="18"/>
            <Button Grid.Row="6" 
    Style="{StaticResource RoundButtonStyleTransparent}" 
    Content="&#9726; Корпус" 
    Foreground="White"
    FontSize="18"/>
            <Button Grid.Row="7" 
    Style="{StaticResource RoundButtonStyleTransparent}" 
    Content="&#9726; Сп" 
    Foreground="White"
    FontSize="18"/>
        </Grid>
    </Border>
</Window>