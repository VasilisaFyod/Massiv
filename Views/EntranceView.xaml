<Window x:Class="Massiv.Views.EntranceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Massiv.ViewModels"
             mc:Ignorable="d"  Height="330" Width="460"  WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="20" Background="{StaticResource DarkPurple}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Margin="15,15"
Width="40" Height="40" Style="{StaticResource RoundButtonStyleTransparent}" VerticalAlignment="Top" HorizontalAlignment="Right" Command="{Binding CloseCommand}"  Cursor="Hand">
                <Image Width="40" Source="pack://application:,,,/Images/close.png"/>
            </Button>
            <TextBlock Grid.Row="0" Text="Вход" Foreground="White" Style="{StaticResource Title}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Border  Grid.Row="1" Background="White" Height="42" Width="398" CornerRadius="20">
                <Grid>
                    <TextBox   Style="{StaticResource TextBox}" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" 
                               Width="370"  
                               Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="{Binding LoginHint}" 
                               Width="370" 
                               Style="{StaticResource TextBlock}"
                               Foreground="Gray"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               IsHitTestVisible="False"/>
                </Grid>
            </Border>
            <TextBlock Grid.Row="2" 
                       Text="{Binding ValidationMessage, UpdateSourceTrigger=PropertyChanged}" 
                       Foreground="DarkRed"
                       HorizontalAlignment="Center"
                       FontSize="14" TextWrapping="Wrap"/>
            <Button Grid.Row="3" Style="{StaticResource Button}" 
                    Content="Войти" 
                    Background="{StaticResource Pink}" 
                    Width="150" Height="50" 
                    Command="{Binding LoginCommand}"/>
        </Grid>
    </Border>
</Window>
