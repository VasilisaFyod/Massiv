<Window x:Class="Massiv.Views.ExportExcel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Massiv.ViewModels"
             mc:Ignorable="d"  Height="330" Width="460"  WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="20" Background="{StaticResource DarkPurple}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Margin="15,15"
Width="40" Height="40" Style="{StaticResource RoundButtonStyleTransparent}" VerticalAlignment="Top" HorizontalAlignment="Right" Command="{Binding CloseCommand}"  Cursor="Hand">
                <Image Width="40" Source="pack://application:,,,/Images/close.png"/>
            </Button>
            <TextBlock Grid.Row="0" Text="Экспорт в Excel" Foreground="White" Style="{StaticResource Title}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource TextBlock}" Text="Дата начала:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Border Margin="10,0" Grid.Row="0" Grid.Column="1" Background="White" Height="42" CornerRadius="20">
                    <DatePicker  Style="{StaticResource CustomDatePickerStyle}" 
     SelectedDateFormat="Short"
     Language="ru-RU"
                                 SelectedDate="{Binding StartDate}"
    />
                </Border>
                <TextBlock Margin="50,0" Grid.Row="1" Style="{StaticResource TextBlock}" Text="Дата окончания:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Border  Margin="10,0"  Grid.Row="1" Grid.Column="1"  Background="White" Height="42" CornerRadius="20">
                    <DatePicker  Style="{StaticResource CustomDatePickerStyle}" 
     SelectedDateFormat="Short"
     Language="ru-RU"
                                  SelectedDate="{Binding EndDate}"
    />
                </Border>
            </Grid>
            <TextBlock Grid.Row="2" 
           Text="{Binding ValidationMessage, UpdateSourceTrigger=PropertyChanged}" 
           Foreground="DarkRed"
           HorizontalAlignment="Center"
           FontSize="14" TextWrapping="Wrap"/>
            <Button Grid.Row="3" Style="{StaticResource Button}" 
                    Content="Экспортировать" 
                    Background="{StaticResource Pink}" 
                    Width="220" Height="50" 
                    Command="{Binding ExportCommand}"/>
        </Grid>
    </Border>
</Window>
