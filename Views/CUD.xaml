<Page x:Class="Massiv.Views.CUD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Massiv.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="1450" d:DesignWidth="1300"
      Title="CUD">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Margin="20,0,20,0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="№ заказа"/>
                <Border Grid.Column="1" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,20,0,21">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="50" 
                        Text="{Binding CurrentOrder.NumberOrder, Mode=TwoWay}" 
             Style="{StaticResource TextBox}" 
             HorizontalAlignment="Stretch"
           VerticalAlignment="Center"
        Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Width="140" TextWrapping="Wrap" Grid.Column="0"  Grid.Row="1" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дата заключения договора"/>
                <Border Grid.Column="1" Grid.Row="1" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,20,0,21">
                    <DatePicker IsEnabled="{Binding IsRead, Converter={StaticResource BooleanToIndexConverter}}"  Style="{StaticResource CustomDatePickerStyle}" SelectedDate="{Binding CurrentOrder.ContractDate, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"
 SelectedDateFormat="Short"
 Language="ru-RU"
/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="2" Grid.Row="1"  VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дата оформления"/>
                <Border Grid.Column="3" Grid.Row="1" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,20,0,21">
                    <DatePicker IsEnabled="{Binding IsRead, Converter={StaticResource BooleanToIndexConverter}}"  Style="{StaticResource CustomDatePickerStyle}" SelectedDate="{Binding CurrentOrder.OrderDate, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"
 SelectedDateFormat="Short"
 Language="ru-RU"
/>
                </Border>
                <TextBlock Width="200" TextWrapping="Wrap" Grid.Row="1" Grid.Column="4" Margin="20,0,20,0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дата отдачи в производство"/>
                <Border Grid.Column="5" Grid.Row="1" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,20,0,20">
                    <DatePicker IsEnabled="{Binding IsRead, Converter={StaticResource BooleanToIndexConverter}}"  Style="{StaticResource CustomDatePickerStyle}" SelectedDate="{Binding CurrentOrder.ProductionStartDate, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"
 SelectedDateFormat="Short"
 Language="ru-RU"
/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Изделие"/>
                <Border Grid.Column="1" Grid.Row="5" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,20,0,20">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="30" 
                         Text="{Binding CurrentOrder.Product, Mode=TwoWay}" 
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Лист"/>
                <Border Grid.Column="3" Grid.Row="5" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,20,0,20">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        InputScope="Number"
                        Text="{Binding CurrentOrder.List, Mode=TwoWay}" 
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Grid.Row="5" Grid.Column="4" Margin="20,0,20,0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Материал"/>
                <Border Grid.Column="5" Grid.Row="5" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,16,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        InputScope="Number"
                        MaxLength="30" 
                        Text="{Binding CurrentOrder.Material, Mode=TwoWay}"
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="0" Grid.Row="6" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Столешница"/>
                <Border Grid.Column="1" Grid.Row="6" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,16,0,17">
                    <ComboBox 
                        IsEnabled="{Binding IsRead, Converter={StaticResource BooleanToIndexConverter}}"
    SelectedIndex="{Binding CurrentOrder.TableAvailable, Converter={StaticResource BooleanToIndexConverter}, Mode=TwoWay}"
    Style="{StaticResource RoundComboBoxStyle}"
    Margin="10,0"
    VerticalAlignment="Center">
                        <ComboBoxItem Content="Да"/>
                        <ComboBoxItem Content="Нет"/>
                    </ComboBox>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="0" Grid.Row="9" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Фасады"/>
                <Border Grid.Column="1" Grid.Row="9" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,16">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="50" 
                         Text="{Binding CurrentOrder.Facade, Mode=TwoWay}"
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="2" Grid.Row="6" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="м2"/>
                <Border Grid.Column="3" Grid.Row="6" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        Text="{Binding CurrentOrder.SquareMeters, Mode=TwoWay}"
    Style="{StaticResource TextBox}" 
    HorizontalAlignment="Stretch"
VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="4" Grid.Row="6" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Цвет"/>
                <Border Grid.Column="5" Grid.Row="6" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="30" 
                         Text="{Binding CurrentOrder.Color, Mode=TwoWay}"
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="0" Grid.Row="11" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="№ заказов"/>
                <Border Grid.Column="1" Grid.Row="11" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,16,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                         Text="{Binding WorkshopOrders[0].NumberWorkshopOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  MaxLength="30" 
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <CheckBox Grid.Row="11" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PurpleCheckBoxStyle}" 
 IsChecked="{Binding WorkshopOrders[0].IsReady, Mode=TwoWay}"
          Visibility="{Binding ShowReadyCheckboxesAndHasOrder0, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Border Grid.Column="3" Grid.Row="11" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" 
                         
                        Margin="0,16,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                       MaxLength="30" 
                        Text="{Binding WorkshopOrders[1].NumberWorkshopOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Style="{StaticResource TextBox}" 
    HorizontalAlignment="Stretch"
VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <CheckBox Grid.Row="11" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PurpleCheckBoxStyle}" 
 IsChecked="{Binding WorkshopOrders[1].IsReady, Mode=TwoWay}"
           Visibility="{Binding ShowReadyCheckboxesAndHasOrder1, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Border Grid.Column="1" Grid.Row="12" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" 
                       
                        Margin="0,16,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                       MaxLength="30" 
                        Text="{Binding WorkshopOrders[2].NumberWorkshopOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Style="{StaticResource TextBox}" 
    HorizontalAlignment="Stretch"
VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <CheckBox Grid.Row="12" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PurpleCheckBoxStyle}" 
 IsChecked="{Binding WorkshopOrders[2].IsReady, Mode=TwoWay}"
           Visibility="{Binding ShowReadyCheckboxesAndHasOrder2, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Border Grid.Column="3" Grid.Row="12" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" 
                         
                        Margin="0,17,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                       MaxLength="30" 
                        Text="{Binding WorkshopOrders[3].NumberWorkshopOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Style="{StaticResource TextBox}" 
    HorizontalAlignment="Stretch"
VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <CheckBox Grid.Row="12" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PurpleCheckBoxStyle}" 
 IsChecked="{Binding WorkshopOrders[3].IsReady, Mode=TwoWay}"
           Visibility="{Binding ShowReadyCheckboxesAndHasOrder3, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Border Grid.Column="1" Grid.Row="13" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" 
                       
                        Margin="0,17,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                         MaxLength="30" 
                        Text="{Binding WorkshopOrders[4].NumberWorkshopOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Style="{StaticResource TextBox}" 
    HorizontalAlignment="Stretch"
VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <CheckBox Grid.Row="13" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PurpleCheckBoxStyle}" 
 IsChecked="{Binding WorkshopOrders[4].IsReady, Mode=TwoWay}"
           Visibility="{Binding ShowReadyCheckboxesAndHasOrder4, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Border Grid.Column="3" Grid.Row="13" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" 
                        
                        Margin="0,17,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                         MaxLength="30" 
                        Text="{Binding WorkshopOrders[5].NumberWorkshopOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Style="{StaticResource TextBox}" 
    HorizontalAlignment="Stretch"
VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <CheckBox Grid.Row="13" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PurpleCheckBoxStyle}" 
 IsChecked="{Binding WorkshopOrders[5].IsReady, Mode=TwoWay}"
           Visibility="{Binding ShowReadyCheckboxesAndHasOrder5, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Grid.Row="7" Grid.Column="2" Margin="20,0,20,0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Конструктор"/>
                <Border Grid.Column="3" Grid.Row="7" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,16">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="20" 
                        Text="{Binding CurrentOrder.Constructor, Mode=TwoWay}"
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дизайнер"/>
                <Border Grid.Column="1" Grid.Row="7" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,17">
                    <TextBox
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="20" 
                        Text="{Binding CurrentOrder.Designer, Mode=TwoWay}"
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дата сдачи"/>
                <Border Grid.Column="1" Grid.Row="2" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,16">
                    <DatePicker IsEnabled="{Binding IsRead, Converter={StaticResource BooleanToIndexConverter}}" Style="{StaticResource CustomDatePickerStyle}" SelectedDate="{Binding CurrentOrder.CompletionDate, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"
 SelectedDateFormat="Short"
 Language="ru-RU"
/>
                </Border>
                <TextBlock Grid.Row="2" Grid.Column="2" Margin="20,0,20,0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дата готовности"/>
                <Border Grid.Column="3" Grid.Row="2" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,16">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="20" 
                        Text="{Binding CurrentOrder.ReadyDate, Mode=TwoWay}"
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дата отгрузки"/>
                <Border Grid.Column="5" Grid.Row="2" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,17">
                    <DatePicker IsEnabled="{Binding IsRead, Converter={StaticResource BooleanToIndexConverter}}" Style="{StaticResource CustomDatePickerStyle}" SelectedDate="{Binding CurrentOrder.ShipmentDate, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"
 SelectedDateFormat="Short"
 Language="ru-RU"
/>
                </Border>
                <TextBlock Margin="20,0,20,0" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Дата оповещения"/>
                <Border Grid.Column="1" Grid.Row="3" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,17">
                    <DatePicker IsEnabled="{Binding IsRead, Converter={StaticResource BooleanToIndexConverter}}" Style="{StaticResource CustomDatePickerStyle}" SelectedDate="{Binding CurrentOrder.NotificationDate, Mode=TwoWay, Converter={StaticResource DateOnlyToDateTimeConverter}}"
 SelectedDateFormat="Short"
 Language="ru-RU"
/>
                </Border>
                <TextBlock Grid.Row="7" Grid.Column="4" Margin="20,0,20,0" VerticalAlignment="Center" Style="{StaticResource TextBlock}" Text="Телефон клиента"/>
                <Border Grid.Column="5" Grid.Row="7" Background="{StaticResource LightPink}" Height="42" CornerRadius="20" Margin="0,17,0,17">
                    <TextBox 
                        IsReadOnly="{Binding IsRead}"
                        MaxLength="11" 
                        Text="{Binding CurrentOrder.ClientPhone, Mode=TwoWay}"
     Style="{StaticResource TextBox}" 
     HorizontalAlignment="Stretch"
   VerticalAlignment="Center"
Margin="10,0"/>
                </Border>
            </Grid>
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Background="{StaticResource Purple}" Content="Назад" Grid.Column="0"
                    Command="{Binding BackCommand}"
             Width="150" 
             Height="50"
             Style="{StaticResource Button}"
             Foreground="White"/>
            <Button Background="{StaticResource Purple}" 
                    Command="{Binding SaveCommand}"
             Content="Сохранить"  
             Grid.Column="1"
             Foreground="White"
                     Width="202" 
                     Height="50"
                     Style="{StaticResource Button}"
                   />
        </Grid>
    </Grid>
</Page>
