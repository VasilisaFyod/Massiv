<Window x:Class="Massiv.Views.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Massiv"
      mc:Ignorable="d" 
      Height="430" Width="530"
      Title="Account"
      WindowStartupLocation="CenterScreen"
      ResizeMode="NoResize" 
      Background="Transparent"
      WindowStyle="None"
      AllowsTransparency="True">
    <Border CornerRadius="20" Background="{StaticResource DarkPurple}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Margin="15,15" Width="40" Height="40" 
                    Style="{StaticResource RoundButtonStyleTransparent}" 
                    VerticalAlignment="Top" HorizontalAlignment="Right"  
                    Cursor="Hand"
                    Command="{Binding CloseCommand}">
                <Image Width="40" Source="pack://application:,,,/Images/close.png"/>
            </Button>

            <TextBlock Grid.Row="0" Text="Учетная запись" 
                       Foreground="White" Style="{StaticResource Title}" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="0,20"/>
            <Grid Grid.Row="1" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <TextBlock Grid.Row="1" Grid.Column="0"
                               Style="{StaticResource TextBlock}" 
                               Foreground="White" 
                               Text="Имя пользователя:"
                               VerticalAlignment="Center"
                               Margin="10,0"/>
                <Border Grid.Row="1" Grid.Column="1" 
                            Background="White" 
                            Height="42" 
                            CornerRadius="20"
                            VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource TextBlock}" 
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   Margin="10,0"
                                   Text="{Binding Login}"/>
                </Border>
            </Grid>
            <Button Grid.Row="2" 
                    Style="{StaticResource Button}" 
                    Content="Выйти" 
                    Background="{StaticResource Red}" 
                    Width="150" 
                    Height="50"
                    Margin="0,0,0,20"
                    Command="{Binding LogoutCommand}"/>
        </Grid>
    </Border>
</Window>