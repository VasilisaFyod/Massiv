<Page x:Class="Massiv.Views.LogistTableView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Massiv.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1300"
      Title="LogistTableView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" 
                    Background="{StaticResource LightPink}" 
                    HorizontalAlignment="Stretch" 
                    CornerRadius="25" 
                    Margin="10,25,0,25">
                <TextBox Style="{StaticResource TextBox}" Margin="10,0" VerticalAlignment="Center" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </Border>
            <Grid Grid.Column="1">
                <Button Margin="30,10"
Width="40" Height="40" Style="{StaticResource RoundButtonStyleTransparent}">
                    <Image Width="40" Source="pack://application:,,,/Images/find.png"/>
                </Button>
            </Grid>
        </Grid>
        <DataGrid Margin="0,0"
                  Grid.Row="1" 
                  SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                  x:Name="DGridOrder" 
                  ItemsSource="{Binding LogistTables}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"  
                  Style="{StaticResource CustomDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource DefaultColumnHeaderStyle}"
                  RowStyle="{StaticResource CustomRowStyleLogik}"
                  CellStyle="{StaticResource CustomCellStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ заказа" 
                    Binding="{Binding OrderNumber}" 
                    Width="*"/>
                <DataGridTextColumn Header="Плановая дата отгрузки" 
                           Binding="{Binding PlanDate, StringFormat='dd.MM.yyyy'}"
                           Width="110">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DefaultColumnHeaderStyle}">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding }"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="ЛДСП" Binding="{Binding Ldsp}" Width="*"/>
                <DataGridTextColumn Header="Кр 1.0" Binding="{Binding Kr1}" Width="*"/>
                <DataGridTextColumn Header="Фурнитура" Binding="{Binding Furniture}" Width="*"/>
                <DataGridTextColumn Header="Ручки" Binding="{Binding Hands}" Width="*"/>
                <DataGridTextColumn Header="Крепеж" Binding="{Binding Anchor}" Width="*"/>
                <DataGridTextColumn Header="Стол." Binding="{Binding Table}" Width="*"/>
                <DataGridTextColumn Header="Кр. к стол." Binding="{Binding KrTable}" Width="*"/>
                <DataGridTextColumn Header="Кр. 3D" Binding="{Binding Kr3D}" Width="*"/>
                <DataGridTextColumn Header="Борт" Binding="{Binding Side}" Width="*"/>
                <DataGridTextColumn Header="Цоколь" Binding="{Binding Base}" Width="*"/>
                <DataGridTextColumn Header="Стекла" Binding="{Binding Glass}" Width="*"/>
                <DataGridTextColumn Header="Вытяжка" Binding="{Binding RangeHood}" Width="*"/>
                <DataGridTextColumn Header="Мойка" Binding="{Binding Wash}" Width="*"/>
                <DataGridTextColumn Header="Ст.панель" Binding="{Binding Panel}" Width="*"/>
                <DataGridTextColumn Header="Дата отгрузки" 
            Binding="{Binding ShipmentDate}"
                   Width="100">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DefaultColumnHeaderStyle}">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
TextWrapping="Wrap"
TextAlignment="Center"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Menu Margin="10,0,10,0" Style="{StaticResource CustomMenuStyle}" Width="50">
                                <MenuItem Style="{StaticResource MainMenuItemStyle}">
                                    <MenuItem.Header>
                                        <Image Width = "25" Source = "pack://application:,,,/Images/actions.png" />
                                    </MenuItem.Header>
                                    <MenuItem Header="Редактировать" Style="{StaticResource SubMenuItemStyle}" Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"   Command="{Binding DataContext.EditOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
         CommandParameter="{Binding}"/>
                                    <MenuItem Header="Завершить" Style="{StaticResource SubMenuItemStyle}" Visibility="{Binding CanComplete, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                                                                                 Command="{Binding DataContext.CompleteOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="{Binding}"/>
                                    <MenuItem Header="Удалить" Style="{StaticResource SubMenuItemStyle}" Visibility="{Binding CanDelete, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                                   Command="{Binding DataContext.DeleteOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="{Binding}"/>
                                    <MenuItem Header="Цвет:" Style="{StaticResource HeaderMenuItemStyle}" Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <MenuItem  Style="{StaticResource ColorMenuItemStyle}" Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"
        Command="{Binding DataContext.ChangeColorCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
        CommandParameter="Orange">
                                        <MenuItem.Icon>
                                            <Border Width="65" Height="30" Background="#FFB236" CornerRadius="13"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem  Style="{StaticResource ColorMenuItemStyle}" Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"
Command="{Binding DataContext.ChangeColorCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="Red">
                                        <MenuItem.Icon>
                                            <Border Width="65" Height="30" Background="#CB6C6C" CornerRadius="13"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem  Style="{StaticResource ColorMenuItemStyle}" Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"
Command="{Binding DataContext.ChangeColorCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="LightBlue">
                                        <MenuItem.Icon>
                                            <Border Width="65" Height="30" Background="#BCF3FF" CornerRadius="13"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem  Style="{StaticResource ColorMenuItemStyle}" Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}"
Command="{Binding DataContext.ChangeColorCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="Gray">
                                        <MenuItem.Icon>
                                            <Border Width="65" Height="30" Background="#D9D9D9" CornerRadius="13"/>
                                        </MenuItem.Icon> 
                                    </MenuItem>
                                    <MenuItem Header="Восстановить" Style="{StaticResource SubMenuItemStyle}" Visibility="{Binding CanRestore, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                                                                                Command="{Binding DataContext.RestoreOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="{Binding}"/>
                                    <MenuItem Header="Вернуть" Style="{StaticResource SubMenuItemStyle}" Visibility="{Binding CanBack, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                                                                                                                              Command="{Binding DataContext.BackOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
CommandParameter="{Binding}"/>
                                </MenuItem>
                            </Menu>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Background="{StaticResource Purple}" Content="Экспорт в Excel" Grid.Column="0"
                    Width="290" 
                    Height="50"
                    Style="{StaticResource Button}"
                    Foreground="White"
                    Command="{Binding ExportToExcelCommand}"
                     Visibility="{Binding IsButtonExportVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Button Background="{StaticResource Purple}" 
                    Content="Добавить"  
                    Grid.Column="1"
                    Foreground="White"
                            Width="202" 
                            Height="50"
                            Style="{StaticResource Button}"
                     Command="{Binding AddOrderCommand}"
                     Visibility="{Binding IsButtonAddVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Button Background="{StaticResource Grey}" 
        Content="Меню"  
        Grid.Column="2"
        Foreground="White"
                Width="202" 
                Height="50"
                Style="{StaticResource Button}"
         Command="{Binding MenuCommand}"/>
        </Grid>
    </Grid>
</Page>
